<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Create an account • PlanIt</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- GoTrue (Netlify Identity core) from CDN -->
    <script type="module" src="https://cdn.jsdelivr.net/npm/gotrue-js@0.11.27/dist/gotrue.min.js"></script>
    <style>
      :root { --gap: 0.75rem; }
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; padding: 2rem; }
      form { max-width: 480px; display: grid; gap: var(--gap); }
      label { font-weight: 600; }
      input { padding: 0.6rem 0.75rem; border: 1px solid #d0d7de; border-radius: 10px; }
      button { padding: 0.7rem 1rem; border-radius: 10px; border: 0; cursor: pointer; }
      .primary { background: black; color: white; }
      .muted { color: #555; font-size: 0.95rem; }
      .msg { margin-top: 0.5rem; }
      .error { color: #b00020; }
      .success { color: #036703; }
    </style>
  </head>
  <body>
    <h1>Create an account</h1>
    <p class="muted">We’ll email you a confirmation link.</p>

    <form id="signup-form">
      <div>
        <label for="name">Full name</label>
        <input id="name" name="name" type="text" autocomplete="name" required />
      </div>

      <div>
        <label for="email">Email</label>
        <input id="email" name="email" type="email" autocomplete="email" required />
      </div>

      <div>
        <label for="phone">Phone number</label>
        <input id="phone" name="phone" type="tel" autocomplete="tel" required />
      </div>

      <div>
        <label for="birthday">Birthday</label>
        <input id="birthday" name="birthday" type="date" required />
      </div>

      <button class="primary" type="submit">Create account</button>
      <div id="message" class="msg"></div>
    </form>

    <script is:inline>
      // Helper: strong random password for silent signup (so you don't need a password field)
      function randomPassword(len = 24) {
        const chars = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*()-_=+[]{}~';
        let out = '';
        crypto.getRandomValues(new Uint32Array(len)).forEach(n => out += chars[n % chars.length]);
        return out;
      }

      // Initialize GoTrue client against your site Identity endpoint
      // Works automatically on Netlify-hosted sites.
      const auth = new window.gotrue.GoTrue({
        APIUrl: `${window.location.origin}/.netlify/identity`,
        setCookie: true
      });

      const form = document.getElementById('signup-form');
      const message = document.getElementById('message');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        message.textContent = '';
        message.className = 'msg';

        const formData = new FormData(form);
        const name = formData.get('name')?.toString().trim();
        const email = formData.get('email')?.toString().trim();
        const phone = formData.get('phone')?.toString().trim();
        const birthday = formData.get('birthday')?.toString();

        // Silent password for signup (user will confirm via email)
        const password = randomPassword();

        try {
          const user = await auth.signup(email, password, {
            data: { name, phone, birthday }
          });

          // Netlify Identity will typically require email confirmation.
          message.textContent = 'Success! Please check your email to confirm your account.';
          message.classList.add('success');

          // Optional: after confirm, they can visit /login to sign in.
        } catch (err) {
          console.error(err);
          message.textContent = (err && err.message) ? err.message : 'Something went wrong creating your account.';
          message.classList.add('error');
        }
      });
    </script>
  </body>
</html>